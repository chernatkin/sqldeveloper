<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.chernatkin.android.sqldeveloper"
    android:installLocation="auto"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/network_server_database"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="org.chernatkin.android.sqldeveloper.SchemasActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.chernatkin.android.sqldeveloper.SQLActivity" />
        <activity android:name="org.chernatkin.android.sqldeveloper.FilesActivity" />
        <activity android:name="org.chernatkin.android.sqldeveloper.SchemaObjectsActivity">
        </activity>
    </application>

</manifest>